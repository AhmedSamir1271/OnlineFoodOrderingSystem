
@{
    Layout = null;
    if (Session["userID"] == null)
    {
        Response.Redirect("~/userLogin/userLogin");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Home</title>
    <style>
        body {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            background-color: black !important;
        }

        .navbar-brand {
            padding-left: 55px;
            color: #EC994B;
        }

        .nav-item a {
            text-decoration: none;
            color: #f2f2f2;
            font-size: 17px;
        }

        .card {
            width: 300px;
            border: none;
            border-radius: 15px;
            padding-bottom: 130px;
            height: 80%;
        }

        .adiv {
            background: #EC994B;
            border-radius: 15px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
            font-size: 20px;
            height: 46px;
        }

        .fa-quote-left {
            color: #F13355;
        }

        .name {
            color: #B0B0B0;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <!-- Start Header Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#" style="position: relative; top: 14px; font-size: 25px; color: #EC994B;">YumY</a>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Home", "../userHome/userHome")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Foods", "../foodShopping/foodShopping")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Orders", "../foodShopping/OrderCart")
                    </li>
                    <li class="nav-item" style="position:absolute; right: 3%; bottom: 14%;">
                        <a class="nav-link" href="@Url.Action("LogOut", "userLogin")">Logout</a>
                    </li>
                    <li class="nav-item" style="position:absolute; right: 7%; bottom: 14%;">
                        <a class="nav-link" href="#">Hello @Session["userName"].ToString()</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Header Navbar -->

    <div>
        <h1 style="color: #f2f2f2; background-color: #EC994B; width: 10%;" class="text-center fw-bold">Home</h1>

        <div class="container">
            <div id="myCarousel" class="carousel slide center-block" data-ride="carousel" style="width: 70%;">
                <!-- Indicators -->
                <ol class="carousel-indicators center-block">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/images/pizza.jpg" alt="Los Angeles" style="width:100%; height:500px;">
                    </div>

                    <div class="item">
                        <img src="~/images/menu-momo.jpg" alt="Chicago" style="width:100%; height:500px;">
                    </div>

                    <div class="item">
                        <img src="~/images/momo.jpg" alt="New york" style="width:100%; height:500px;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div>
            <h1 style="color: #f2f2f2; background-color: #EC994B; width: 10%;" class="text-center fw-bold">Reviews</h1>
        </div>
        
        <!-- Start Reviews Section -->
        <div class="container" style="display: flex; padding-top:60px;">
            <div class="container d-flex justify-content-center">
                <div class="card mt-5">
                    <div class="d-flex flex-row justify-content-between p-3 adiv text-white">
                        <i class="fas fa-chevron-left"></i>
                        <span class="pb-3">Sara</span>
                        <i class="fas fa-times"></i>
                    </div>
                    <div class="image mt-3 mb-4 px-4">
                        <img src="~/images/person1.jpg" width="100%">
                    </div>
                    <div class="comment px-4">
                        <div class="d-flex flex-row">
                            <i class="fas fa-quote-left mr-2"></i>
                            <h6> I love BirdSeed. It's the most amazing tool i have everb used!</h6>
                        </div>
                    </div>
                    <div class="name px-5 pt-2">
                        <span>Sara</span><br>
                        <span>Satisfied customer</span>
                    </div>
                </div>
            </div>

            <div class="container d-flex justify-content-center">
                <div class="card mt-5">
                    <div class="d-flex flex-row justify-content-between p-3 adiv text-white">
                        <i class="fas fa-chevron-left"></i>
                        <span class="pb-3">Osman</span>
                        <i class="fas fa-times"></i>
                    </div>
                    <div class="image mt-3 mb-4 px-4">
                        <img src="~/images/person2.jpg" width="100%">
                    </div>
                    <div class="comment px-4">
                        <div class="d-flex flex-row">
                            <i class="fas fa-quote-left mr-2"></i>
                            <h6> I love BirdSeed. It's the most amazing tool i have everb used!</h6>
                        </div>
                    </div>
                    <div class="name px-5 pt-2">
                        <span>Ahmed</span><br>
                        <span>Satisfied customer</span>
                    </div>
                </div>
            </div>

            <div class="container d-flex justify-content-center">
                <div class="card mt-5">
                    <div class="d-flex flex-row justify-content-between p-3 adiv text-white">
                        <i class="fas fa-chevron-left"></i>
                        <span class="pb-3">Toqa</span>
                        <i class="fas fa-times"></i>
                    </div>
                    <div class="image mt-3 mb-4 px-4">
                        <img src="~/images/person3.jpg" width="100%">
                    </div>
                    <div class="comment px-4">
                        <div class="d-flex flex-row">
                            <i class="fas fa-quote-left mr-2"></i>
                            <h6> I love BirdSeed. It's the most amazing tool i have everb used!</h6>
                        </div>
                    </div>
                    <div class="name px-5 pt-2">
                        <span>Toqa</span><br>
                        <span>Satisfied customer</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Start Reviews Section -->
        <!-- Start Footer -->
        <footer class="text-center text-white" style="background-color: #EC994B;;">
            <!-- Grid container -->
            <div class="container pt-4" ">
                <h3 style="color:#f2f2f2">Online Food Ordering System</h3>
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center text-dark p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2020 Copyright:
            </div>
            <!-- Copyright -->
        </footer>
        <!-- End Footer -->
    </div>
    <link href="~/Scripts/bootstrap (1).css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
</body>
</html>
