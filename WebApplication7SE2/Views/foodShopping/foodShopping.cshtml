@model List<WebApplication7SE2.Models.food>
@{
    Layout = null;
    if (Session["userID"] == null)
    {
        Response.Redirect("~/userLogin/userLogin");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Food Shopping</title>
    <style>
        body {
            color: #f2f2f2 !important;
            text-align: center !important;
            background-color: black !important;
        }

        .navbar-brand {
            padding-left: 30px;
        }

        .nav-item a {
            text-decoration: none;
            color: #f2f2f2;
        }
    </style>
</head>
<body>

    <!-- Start Header Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#" style="font-size: 25px; color: #EC994B;">YumY</a>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Home", "../userHome/userHome")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Foods", "../foodShopping/foodShopping")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Make Order", "../addOrder/addOrder")
                    </li>
                    <li class="nav-item" style="position:absolute; right: 3%;">
                        <a class="nav-link" href="@Url.Action("LogOut", "userLogin")">Logout</a>
                    </li>
                    <li class="nav-item" style="position:absolute; right: 7%;">
                        <a class="nav-link" href="#">Hello @Session["userName"].ToString()</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Header Navbar -->

    <h1 style="font-size:25px; color: #f2f2f2; background-color: #EC994B; width: 10%; position:relative; top:20px;" class="text-center fw-bold ">Food List</h1>
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="col-md-3" style=" width: 19%; position: relative; left: 40%;">
                <div style="text-align:center; border-bottom: 2px solid gray;">
                    <h3>@item.title</h3>
                </div>
                <div>
                    <div class="thumbnail">
                        <div class="image" style="margin: 20px;">
                            <img class="img-responsive" src="@Url.Content(item.image_name)" height="200px" width="200px" />
                        </div>
                    </div>
                    <div class="col-md-4" style="text-align:left;">
                        <b>@item.description</b>
                    </div>
                    <div class="col-md-4" style="text-align:left;">
                        <b>@item.price.00 EGP</b>
                    </div>
                </div>
            </div>
        }
    </div>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Scripts/bootstrap (1).css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
</body>
</html>
