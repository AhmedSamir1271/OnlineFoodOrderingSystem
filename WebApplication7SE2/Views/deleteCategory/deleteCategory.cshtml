@model List<WebApplication7SE2.Models.category>

@{
    Layout = null;
    ViewBag.Title = "deleteCategory";
    if (Session["adminID"] == null)
    {
        Response.Redirect("~/adminLogin/adminLogin");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Category</title>
</head>
<body>
    <!-- Start Header Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#" style="font-size: 25px; color: #EC994B;">YumY</a>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Home", "../adminHome/adminHome")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Foods", "../deleteFood/deleteFood")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Orders", "../deleteOrder/deleteOrder")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Categories", "../deleteCategory/deleteCategory")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Users", "../deleteUser/deleteUser")
                    </li>
                    <li class="nav-item" style="position:absolute; right: 3%;">
                        <a class="nav-link" href="@Url.Action("LogOut", "adminLogin")">Logout</a>
                    </li>
                    <li class="nav-item" style="position:absolute; right: 7%;">
                        <a class="nav-link" href="#">Hello @Session["adminName"].ToString()</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Header Navbar -->

    <h2 class="title">Category List</h2>

    <table class="content">

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.title</td>
                <td><a href="@Url.Action("deleteCategoryConfirmed", "deleteCategory", new { id= item.id })">Delete</a></td>
            </tr>
        }

    </table>

    <div class="fixed-bottom" style="padding: 20px;">
        @Html.ActionLink("Add Category", "../addCategory/addCategory")
    </div>
    <link href="~/Scripts/bootstrap (1).css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
</body>
</html>

<style>
    body {
        text-align: center;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        background-color: black !important;
    }

    .title {
        font-size: 40px;
        font-weight: bold;
        color: #f2f2f2;
        padding: 30px;
    }

    .content {
        color: #f2f2f2;
        font-size: 25px;
        padding: 20px;
        position: relative;
        left: 43%;
    }

        .content tbody {
            text-align: center;
        }

        .content tr {
            padding-bottom: 10px;
        }

        .content a {
            padding-left: 50px;
        }

    .navbar-brand {
        padding-left: 30px;
    }

    .nav-item a {
        text-decoration: none;
        color: #f2f2f2;
    }
</style>
