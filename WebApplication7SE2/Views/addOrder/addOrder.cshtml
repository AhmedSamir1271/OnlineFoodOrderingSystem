@model WebApplication7SE2.Models.order

@{
    Layout = null;
    ViewBag.Title = "addOrder";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/userLogin/userLogin");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Order</title>
</head>
<body>
    <!-- Start Header Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#" style="font-size: 25px; color: #EC994B;">YumY</a>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Home", "../userHome/userHome")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Foods", "../foodShopping/foodShopping")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Make Order", "../addOrder/addOrder")
                    </li>
                    <li class="nav-item" style="position:absolute; right: 3%;">
                        <a class="nav-link" href="@Url.Action("LogOut", "userLogin")">Logout</a>
                    </li>
                    <li class="nav-item" style="position:absolute; right: 7%;">
                        <a class="nav-link" href="#">Hello @Session["userName"].ToString()</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Header Navbar -->

    <h2 class="title">Add Order</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.food, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.food, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.food, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.qty, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.qty, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.qty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.order_date, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.order_date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.order_date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="btn-div">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div class="fixed-bottom" style="padding: 20px;">
        @Html.ActionLink("Back to Orders List", "../orderList/orderList")
    </div>

    <link href="~/Scripts/bootstrap (1).css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
</body>
</html>


<style>
    body {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        text-align: center;
        background-color: black;
    }

    .title {
        font-size: 40px;
        font-weight: bold;
        color: #f2f2f2;
        padding: 30px;
    }

    .form-horizontal {
        text-align: center !important;
        padding: 40px;
    }

    .form-group {
        display: flex;
        color: #f2f2f2;
        font-size: 20px;
        padding: 20px;
    }

    .form-control {
        width: 200px
    }

    .btn-div {
        position: relative;
        left: 45%;
        text-align: center;
        padding: 20px;
    }

    .btn {
        padding: 10px 30px;
        background-color: #EC994B;
        border: none;
        color: #f2f2f2;
        font-size: 18px;
        font-weight: bold;
    }

    .navbar-brand {
        padding-left: 30px;
    }

    .nav-item a {
        text-decoration: none;
        color: #f2f2f2;
    }
</style>
